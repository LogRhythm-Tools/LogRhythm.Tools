    "LogRhythmEcho": {
        "Name": "LogRhythm Echo",
        "Optional": true,
        "Message": "Echo is a utility which allows users to replay native logs and PCAPs into LogRhythm for testing and verification purposes.",
        "HasKey": false,

        "Fields": {
            "BaseUrl": {
                "Prompt": "LogRhythm Echo Hostname",
